{
  "name": "pet-management-app",
  "version": "1.0.0",
  "description": "A comprehensive pet management system with plugin-based architecture",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "db:push": "prisma db push",
    "db:generate": "prisma generate",
    "db:studio": "prisma studio",
    "db:reset": "prisma db push --force-reset",
    "seed:features": "tsx src/lib/seed-features.ts",
    "create:admin": "tsx src/lib/create-admin.ts",
    "setup": "npm run db:generate && npm run db:push && npm run seed:features && npm run create:admin",
    "clean": "rm -rf .next node_modules prisma/dev.db",
    "fresh-install": "npm run clean && npm install && npm run setup"
  },
  "dependencies": {
    "@auth/prisma-adapter": "^2.7.4",
    "@hookform/resolvers": "^3.10.0",
    "@prisma/client": "^6.13.0",
    "@radix-ui/react-dialog": "^1.1.4",
    "@radix-ui/react-select": "^2.1.4",
    "@radix-ui/react-toast": "^1.2.4",
    "@supabase/supabase-js": "^2.49.0",
    "@types/bcryptjs": "^2.4.6",
    "bcryptjs": "^2.4.3",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "lucide-react": "^0.469.0",
    "next": "15.1.6",
    "next-auth": "^4.24.12",
    "prisma": "^6.13.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hook-form": "^7.54.2",
    "tailwind-merge": "^2.5.5",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@tailwindcss/postcss": "^4.0.0",
    "@types/node": "^22.10.5",
    "@types/react": "^19.0.2",
    "@types/react-dom": "^19.0.2",
    "eslint": "^9.17.0",
    "eslint-config-next": "15.1.6",
    "tailwindcss": "^3.4.17",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  },
  "keywords": [
    "pet-management",
    "nextjs",
    "typescript",
    "plugin-architecture",
    "tailwindcss",
    "prisma",
    "nextauth"
  ],
  "author": "PetCare Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/pet-management-app.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/pet-management-app/issues"
  },
  "homepage": "https://github.com/your-username/pet-management-app#readme"
}
